<!-- HTML File -->
<h1>Edit Listing For: {{name}}</h1>

{{!-- Create our form server request for listing product--}}
<form id = "editProductForm" id = "createProductForm" method = "POST" action = "/products/{{_id}}/edit">

    <label for = "category">Update Category:</label>
    <div id = "categoryContainer">
      {{!-- productCategoryClient.js will add dropdowns here --}}
    </div>

    {{!-- <select name = "categoryId" required>
      {{#each categories}}
        <option value = "{{this._id}}" {{#if this.categorySelected}}Selected{{/if}}>
          {{this.categoryName}}
        </option>
      {{/each}}
    </select><br> --}}
    
    <label for = "name">Product Name:</label>
    <input type = "text" id = "name" name = "name" value = "{{name}}" required><br>
    
    <label for = "description">Description:</label><br>
    <textarea id = "description" name = "description" required>{{description}}</textarea><br>
    
    <label for = "price">Price:</label>
    <input type = "number" id = "price" name = "price" step = "0.01" value = "{{price}}"><br>
    
    <label for = "photos">Photos (Separate URLs by Commas):</label>
    <input type = "text" id = "photos" name = "photos" value = "{{photos}}" required><br>
    
    <label for = "condition">Condition:</label><br>
    <select id = "condition" name = "condition" required>
      <option value = "New">New</option>
      <option value = "Used">Used</option>
    </select><br>

    <label for = "stock">Stock Quantity:</label>
    <input type = "number" id = "stock" name = "stock" min = "0" step = "1" value = "{{stock}}" required><br>

    <button type = "submit">Update Product</button>
</form>

<!-- Insert our product results in div -->
<div id = "productResult"></div>

<!-- If there is an error -->
<div id = "err_output"></div>

<!-- Get our external JavaScript file -->
{{!-- <script src = "/js/productClient.js"></script> --}}
<script type = "module" src = "/js/productCategoryClient.js"></script>