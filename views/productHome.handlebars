<h1 class = "h1Color">hackme.corp</h1>
<article>
    <header>
        <h2>{{productDescription}}</h2>
    </header>
</article>
<form action="/products/searchproducts" method="post">
    <label for="{{searchInputId}}">Enter Product Name:</label>
    <input type="text" id="{{searchInputId}}" name="{{searchInputId}}">
    <br><br>
    <input type="submit" value="Search Product">
</form>
<article>
    <header>
        <h2>{{title}}</h2>
    </header>
</article>
{{!-- Button to create product, should only appear when logged in aunthenticated --}}
<br>
{{#if isAuthenticated}}
    <a href = "/products/createproduct" id = "productLink">List Product</a>
{{else}}
    <a href="/auth/login">Please sign in to list a product</a><br><br>
{{/if}}
<ul>
    {{#each products}}
    <li>

      <!-- List all available products in database -->
      <img class="searchResultImage" alt="{{this.name}} Poster" src="{{this.photos}}">
      <a href="/products/{{this._id}}" id = "productLink">{{this.name}}</a> - {{this.category}} - ${{this.price}}
        {{#if ../isAuthenticated}}
            <form action = "/cart/add" method = "POST">
                <input type = "hidden" name = "userId" value = "{{../currentUserId}}">
                <input type = "hidden" name = "productId" value = "{{this._id}}">
                <input type = "number" name = "quantity" min = "1" value = "1">
                <button type = "submit">Add to Cart</button>
            </form>
        {{else}}
            <br><a href="/auth/login">Please sign in to add a product to cart</a><br><br>
        {{/if}}
    </li>
    {{/each}}
</ul>