<!-- HTML File -->
<h1>{{title}}</h1>

{{!-- Create our form server request for listing product--}}
<form id = "createProductForm">
    <label for = "category">Category:</label>
    <select id = "category" name = "category" required>
      <option value = "">-- Choose Category --</option>
      {{#each categories}}
        <option value = "{{this.categoryName}}">{{this.categoryName}}</option>
      {{/each}}
    </select><br>
    
    <label for = "vendor">Vendor:</label>
    <input type = "text" id = "vendor" name = "vendor" required><br>
    
    <label for = "name">Name:</label>
    <input type = "text" id = "name" name = "name" required><br>
    
    <label for = "description">Description:</label>
    <textarea id = "description" name = "description" required></textarea><br>
    
    <label for = "price">Price:</label>
    <input type = "number" id = "price" name = "price" step = "0.01" required><br>
    
    <label for = "photos">Photos (Separate URLs by Commas):</label>
    <input type = "text" id = "photos" name = "photos" required><br>
    
    <label for = "condition">Condition:</label>
    <select id = "condition" name = "condition" required>
      <option value = "New">New</option>
      <option value = "Used">Used</option>
    </select><br>

    <label for = "status">Status:</label>
    <select id = "status" name = "status" required>
      <option value = "In stock">In stock</option>
      <option value = "Out of stock">Out of stock</option>
    </select><br>
    
    <button type = "submit">List Product</button>
</form>

<!-- Insert our product results in div -->
<div id = "productResult"></div>

<!-- If there is an error -->
<div id = "err_output"></div>

<!-- Get our external JavaScript file -->
<script src = "/public/js/productClient.js"></script>