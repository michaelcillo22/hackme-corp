<article>
    <h1>{{name}}</h1>
    <img class="searchResultImage" alt="{{name}} Poster" src="{{photos}}">

    <h2>{{vendor}}</h2>
    <section>
        <h3 class="h3Color">Product Details</h3>
            <dl>
                <dt>Category:</dt>
                <dd>{{category}}</dd>
                <dt>Description:</dt>
                <dd>{{description}}</dd>
                <dt>Price:</dt>
                <dd>{{price}}</dd>
                <dt>Photos:</dt>
                <dd>{{photos}}</dd>
                <dt>Condition:</dt>
                <dd>{{condition}}</dd>
                <dt>Status:</dt>
                <dd>{{status}}</dd>
                <dt>Product Listed Date:</dt>
                <dd>{{productListedDate}}</dd>
            </dl>
    </section>

    <section>
        <h4>Reviews</h4>
        <table class="my_coolratings_table">
            <tr>
                <th>Source</th>
                <th>Rating</th>
            </tr>
            {{#each reviews}}
            <tr>
                <td>{{this.reviewer_name}}</td>
                <td>{{this.review_title}}</td>
                <td>{{this.review_date}}</td>
                <td>{{this.review_score}}</td>
                <td>{{this.review_body}}</td>
                <td>{{this.comments}}</td>
                <td>{{this.helpfulness}}</td>
            </tr>
            {{/each}}
        </table>
    </section>

    {{!-- Write our review --}}
    <section>
        <h4>Review Product</h4>
        <form method = "POST" action = "/reviews/{{_id}}">

            <!-- Make this hidden so route can double‑check the productId -->
            <input type = "hidden" name = "productId" value = "{{_id}}">

            {{!-- <label for = "reviewer_name">Your Name</label>
            <input type = "text" id = "reviewer_name" name = "reviewer_name" required> --}}

            <label for = "review_score">Rating (1–5)</label>
            <input type = "number" id = "review_score" name = "review_score" min = "1" max = "5" step = "0.1" required>

            <label for = "review_body">Write Your Review</label>
            <textarea id = "review_body" name = "review_body" required></textarea>

            <button type="submit">Submit Review</button>
        </form>
        </section>

    <section>
        <a href="/products">Search for Another Product</a>
    </section>
</article>